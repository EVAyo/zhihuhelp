    {
      "type": "node",
      "request": "launch",
      "name": "生成电子书-wsl",
      "program": "${workspaceFolder}/src/ace.ts",
      "stopOnEntry": false,
      "args": [
        // "Fetch:Customer"
        "Generate:Customer" // 这里可以是任意命令
