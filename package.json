{
  "name": "zhihuhelp",
  "version": "2.5.0",
  "description": "知乎助手 & TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/YaoZeyuan/zhihuhelp"
  },
  "main": "dist/index.js",
  "author": "姚泽源",
  "license": "MIT",
  "scripts": {
    "startgui": "node client/script/start.js",
    "buildgui": "node client/script/build.js",
    "start": "electron dist/index.js  --zhihuhelp-debug",
    "ace": "node dist/ace.js",
    "watch": "babel src --copy-files --watch --out-dir dist  --verbose --source-maps --extensions \".ts,.tsx,.js,.jsx\"",
    "build": "babel src --copy-files -d dist --verbose  --source-maps --extensions \".ts,.tsx,.js,.jsx\" ",
    "pack": "npm run build && npm run buildgui && electron-builder --dir",
    "dist": "npm run build && npm run buildgui && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "rebuild-sqlite3": "electron-rebuild -f -w sqlite3 sharp",
    "tsc": "tsc",
    "lint": "tsc && NODE_ENV=production eslint src",
    "eslint": "eslint src",
    "prettier-with-fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,less,css}\""
  },
  "build": {
    "productName": "知乎助手",
    "appId": "zhihuhelp",
    "copyright": "@姚泽源",
    "npmRebuild": true,
    "buildDependenciesFromSource": true,
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "gui/dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "src/public/icon/icon.png"
    },
    "mac": {
      "category": "zhihuhelp.app.category.type",
      "target": "dmg",
      "icon": "src/public/icon/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@adonisjs/ace": "^11.3.1",
    "@adonisjs/core": "^5.8.4",
    "archiver": "^5.3.1",
    "atob": "^2.1.2",
    "axios": "^0.27.2",
    "jsdom": "^17.0.0",
    "json5": "^2.1.0",
    "knex": "^2.1.0",
    "lodash": "^4.17.21",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "query-string": "^6.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semver": "^7.3.7",
    "sharp": "^0.30.7",
    "shelljs": "^0.8.1",
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/archiver": "^5.3.1",
    "@types/json5": "0.0.30",
    "@types/knex": "^0.15.1",
    "@types/lodash": "^4.14.91",
    "@types/md5": "^2.1.33",
    "@types/node": "^9.4.6",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@types/semver": "^7.3.10",
    "@types/sharp": "^0.25.0",
    "@types/shelljs": "^0.7.8",
    "babel-plugin-root-import": "^6.6.0",
    "electron": "14.0.0",
    "electron-builder": "21.2.0",
    "electron-rebuild": "^3.2.7",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "node-gyp": "^8.4.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
